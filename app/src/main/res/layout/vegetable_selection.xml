<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View" />

        <variable
            name="vegetableSelectionViewModel"
            type="custom.subway.subway.MakeRecipe.VegetableSelection.VegetableSelectionViewModel" />


    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <android.support.v7.widget.RecyclerView
                android:id="@+id/vegetableSelectionRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="21dp"
                android:layout_weight="1" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/boxconfirmation_3x"
                android:gravity="center"
                android:onClick="@{vegetableSelectionViewModel.vegetableSelectionIsFinishedOnclick}"
                android:text="다음 단계로"
                android:textColor="#ffffff"
                android:textSize="16dp"
                android:textStyle="bold" />

        </FrameLayout>

    </LinearLayout>


</layout>


